<apex:page controller="LMSVisualforceController" docType="html-5.0">
    <!-- <apex:includeScript value="{!URLFOR($Resource.lmsvf, 'lmsvf.js')}"/> -->
    <apex:slds />
    <div class="slds-card">
        <div class="slds-card__body slds-card__body_inner">
            <ul data-list="list"></ul>
        </div>

        <footer class="slds-card__footer">
            <c:viewSource
                source="pages/{!$CurrentPage.Name}.page"
                branch="beta"
            >
                Handle LMS message and refresh data using Visualforce remote
                action.
            </c:viewSource>
        </footer>
    </div>

    <apex:remoteObjects>
        <apex:remoteObjectModel name="Contact" fields="Id,Name,Picture__c" />
    </apex:remoteObjects>

    <!-- prettier-ignore -->
    <script type="text/javascript">

        window.lmsutil = {
            messageChannel: "{!$MessageChannel.Record_Selected__c}",
            currentPage: "{!$CurrentPage.Name}"
        };  

    </script>
    <script src="{!URLFOR($Resource.lmsvf, 'lmsvf.js')}"></script>
</apex:page>
