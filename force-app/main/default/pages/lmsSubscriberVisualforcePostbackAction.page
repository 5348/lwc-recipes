<apex:page
    showHeader="false"
    sidebar="false"
    controller="LMSVisualforceController"
    lightningStylesheets="true"
    docType="html-5.0"
>
    <apex:stylesheet value="{!URLFOR($Resource.lmsvf, 'lmsvf.css')}" />
    <apex:slds />

    <apex:outputPanel id="contactlist">
        <apex:actionStatus id="status">
            <apex:facet name="start">
                <c:spinner />
            </apex:facet>
        </apex:actionStatus>
        <div class="slds-card">
            <apex:outputPanel
                layout="block"
                rendered="{!NOT(ISBLANK(contactRecord.Id))}"
                styleClass="slds-card__body slds-card__body_inner"
            >
                <div class="slds-m-around_medium">
                    <img
                        src="{!contactRecord.Picture__c}"
                        class="img-small"
                        alt="Profile photo"
                    />
                </div>
                <p>{!contactRecord.Name}</p>
                <p>{!contactRecord.Title}</p>
                <p>
                    <a href="tel:{!contactRecord.Phone}"
                        >{!contactRecord.Phone}</a
                    >
                </p>
                <p>
                    <a href="mailto:{!contactRecord.Email}"
                        >{!contactRecord.Email}</a
                    >
                </p>
            </apex:outputPanel>
            <apex:outputPanel
                layout="block"
                rendered="{!ISBLANK(contactRecord.Id)}"
                styleClass="slds-card__body slds-card__body_inner"
            >
                Awaiting message...
            </apex:outputPanel>

            <footer class="slds-card__footer">
                <c:viewSource
                    source="pages/{!$CurrentPage.Name}.page"
                    branch="beta"
                >
                    <p>
                        Handle LMS message and refresh data using Visualforce
                        post back action.
                    </p>
                </c:viewSource>
            </footer>
        </div>
    </apex:outputPanel>
    <apex:form>
        <!-- Surface controller method as JS function -->
        <apex:actionFunction
            action="{!refreshContact}"
            name="refreshContactsFunction"
            reRender="contactlist"
            status="status"
        >
            <apex:param name="Id" value="" />
        </apex:actionFunction>
    </apex:form>
    <!-- prettier-ignore -->
    <script type="text/javascript">

        window.lmsutil = {
            messageChannel: "{!$MessageChannel.Record_Selected__c}",
            currentPage: "{!$CurrentPage.Name}", 
            actionFunction: refreshContactsFunction
        };  

    </script>
    <script src="{!URLFOR($Resource.lmsvf, 'lmsvf.js')}"></script>
</apex:page>
